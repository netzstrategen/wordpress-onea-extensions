{
  "formId": "verbrauchsausweis",
  "title": "Verbrauchsausweis erstellen",
  "steps": [
    {
      "id": "building-info",
      "title": "Gebäudeinformationen",
      "fields": [
        {
          "name": "buildingType",
          "type": "select",
          "label": "Gebäudeart",
          "placeholder": "Bitte wählen...",
          "required": true,
          "options": [
            { "value": "einfamilienhaus", "label": "Einfamilienhaus" },
            { "value": "zweifamilienhaus", "label": "Zweifamilienhaus" },
            { "value": "mehrfamilienhaus", "label": "Mehrfamilienhaus" },
            {
              "value": "wohnteilGemischt",
              "label": "Wohnteil eines gemischt genutzten Gebäudes"
            },
            { "value": "sonstiges", "label": "Sonstiges" }
          ]
        },
        {
          "name": "buildingTypeOther",
          "type": "text",
          "label": "Sonstige Gebäudeart",
          "placeholder": "Bitte angeben...",
          "required": true,
          "dependsOn": {
            "field": "buildingType",
            "value": "sonstiges"
          }
        },
        {
          "name": "numberOfUnits",
          "type": "number",
          "label": "Anzahl der Wohneinheiten",
          "placeholder": "z.B. 1",
          "required": true,
          "validation": {
            "min": 1,
            "message": "Mindestens 1 Wohneinheit erforderlich"
          },
          "conditionalWarning": {
            "condition": "numberOfUnits < 5 && buildingYear < 1978",
            "message": "Bei weniger als 5 Wohneinheiten und Baujahr vor 1978 ist ein Bedarfsausweis erforderlich.",
            "blocking": true,
            "ctaText": "Zum Bedarfsausweis",
            "ctaLink": "/bedarfsausweis"
          }
        },
        {
          "name": "buildingYear",
          "type": "number",
          "label": "Baujahr des Gebäudes",
          "placeholder": "z.B. 1990",
          "required": true,
          "validation": {
            "min": 1900,
            "max": 2025,
            "message": "Baujahr muss zwischen 1900 und heute liegen"
          },
          "conditionalWarning": {
            "condition": "buildingYear > (currentYear - 3)",
            "message": "Verbrauchsausweis nicht möglich – Bedarfsausweis notwendig, da Neubau",
            "blocking": true,
            "ctaText": "Zum Bedarfsausweis",
            "ctaLink": "/bedarfsausweis"
          }
        },
        {
          "name": "heatingYear",
          "type": "number",
          "label": "Baujahr der Heizungsanlage",
          "placeholder": "z.B. 2010",
          "required": true,
          "validation": {
            "min": 1900,
            "max": 2025,
            "message": "Baujahr der Heizung kann nicht in der Zukunft liegen",
            "customValidation": "heatingYear >= buildingYear"
          }
        },
        {
          "name": "livingArea",
          "type": "number",
          "label": "Beheizte Wohnfläche in m²",
          "placeholder": "z.B. 120",
          "required": true,
          "validation": {
            "min": 1,
            "message": "Wohnfläche muss größer als 0 sein"
          },
          "conditionalWarning": {
            "condition": "livingArea < 50",
            "message": "Kein Energieausweis notwendig",
            "blocking": false
          }
        },
        {
          "name": "hasBasement",
          "type": "select",
          "label": "Ist ein beheizter Keller vorhanden?",
          "required": true,
          "options": [
            { "value": "ja", "label": "Ja" },
            { "value": "nein", "label": "Nein" }
          ]
        },
        {
          "name": "extensivelyRenovated",
          "type": "radio",
          "label": "Wurde das Gebäude umfangreich saniert?",
          "required": true,
          "options": [
            { "value": "ja", "label": "Ja" },
            { "value": "nein", "label": "Nein" }
          ]
        },
        {
          "name": "renovationYear",
          "type": "number",
          "label": "Jahr der Sanierung",
          "placeholder": "z.B. 2015",
          "required": true,
          "dependsOn": {
            "field": "extensivelyRenovated",
            "value": "ja"
          },
          "validation": {
            "min": 1900,
            "max": 2025,
            "message": "Sanierungsjahr muss gültig sein",
            "customValidation": "renovationYear >= buildingYear"
          }
        }
      ]
    },
